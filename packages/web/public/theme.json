{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://usearctic.sh/theme.json",
  "title": "Arctic Theme",
  "description": "Schema for Arctic color themes",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "defs": {
      "type": "object",
      "description": "Color definitions",
      "additionalProperties": {
        "type": "string",
        "description": "Hex color code",
        "pattern": "^#[0-9a-fA-F]{6}$"
      }
    },
    "theme": {
      "type": "object",
      "description": "Theme color mappings",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": ["defs", "theme"]
}
